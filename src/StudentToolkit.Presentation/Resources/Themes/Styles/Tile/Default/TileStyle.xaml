<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:StudentToolkit.Presentation.Controls">

    <Style TargetType="{x:Type controls:Tile}">
        <Setter Property="Background" Value="{DynamicResource Brushes.Tile.Background}"/>
        <Setter Property="Padding" Value="35"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:Tile}">
                    <Border
                        CornerRadius="20"
                        Background="{TemplateBinding Background}">

                        <ContentPresenter
                            Content="{TemplateBinding Content}"
                            Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>